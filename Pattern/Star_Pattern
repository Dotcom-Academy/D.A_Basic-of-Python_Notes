row = 7

for i in range(row):

    for k in range(i,row-1):
        print(" ",end=" ")


    for j in range(2*i+1):

        if (j==0 or j==2*i or i==row-1):

            print("*",end=" ")
        else:
            print(" ",end=" ")

    print()
    

    
 
 
 
