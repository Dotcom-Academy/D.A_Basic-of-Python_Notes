row = 6

for i in range(row):

    for k in range(i):
        print(" ",end="")

    for j in range(row-i):

        if (j==0 or j==row-i-1 or i==0):

            print("*",end=" ")
        else:

            print(" ",end=" ")
    print()
 
 
 
 
 
 
 
 
@ # @ # @ # 
# @ # @ # @ 
@ # @ # @ # 
# @ # @ # @ 
@ # @ # @ # 
# @ # @ # @ 


num=6

for i in range(num):

    for j in range(num):

        if i%2 == 0:

            if j%2 == 0:

                print("@",end=" ")

            else:

                print("#",end=" ")
        else:

            if j%2 == 0:

                print("#",end=" ")

            else:

                print("@",end=" ")

    print()
    
    
    
    
    
    
    

    
    
